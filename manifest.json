{
    "manifest_version": 2,
    "name": "bilibiliAutoBlock",
    "author": "EveryTian",
    "version": "1.1.5",
    "description": "基于弹幕内容的用户自动屏蔽Chrome扩展。",
    "icons": {
        "128": "img/logo.png"
    },
    "browser_action": {
        "default_icon": "img/logo.png"
    },
    "options_page": "options/options.html",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "*://*.bilibili.com/*",
        "webRequestBlocking",
        "webRequest"
    ]
}
